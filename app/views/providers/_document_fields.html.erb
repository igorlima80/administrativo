<div class="row document nested-fields">
  <div class="col-lg-12 col-xs-12">
    <div class="row">
      <div class="col-lg-2 col-xs-2">
        <%= f.association :document_type, collection: DocumentType.order(:code), label_method: :code,
          input_html: { class: 'select2' } %>
      </div>
      <div class="col-lg-2 col-xs-2">
        <%= f.input :number %>
      </div>
      <div class="col-lg-2 col-xs-2">
        <%= f.input :emission, html5: true, input_html: { class: 'datepicker' } %>
      </div>
      <div class="col-lg-2 col-xs-2">
        <%= f.input :department %>
      </div>
      <div class="col-lg-2 col-xs-2">
        <%= f.association :state, input_html: { class: 'select2' },
          collection: Proc.new{ State.order(:name).map{ |c| [c.name, c.id, data: { code: c.code }] } }
        %>
      </div>
      <div class="col-md-1">
        <%= link_to_remove_association f, class: 'remove_document_fields' do %>
        <div class="btn btn-danger top-25">
          <i class="fa fa-fw fa-trash-alt"></i>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
