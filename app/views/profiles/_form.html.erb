<%= simple_form_for(object) do |f| %>
  <div class="card card-outline card-danger">
    <div class="card-header with-border">
      <h3 class="card-title">
        Dados do <%= Profile.model_name.human %>
      </h3>
    </div>
    <div class="card-body">
      <%= f.input :name %>
    </div>
  </div>

  <div class="card card-outline card-danger">
    <div class="card-header with-border">
      <h3 class="card-title">
        <%=t Permission.model_name.human.pluralize %>
      </h3>
    </div>
    <div class="card-body">
      <div id="questions">
        <%= f.simple_fields_for :permissions do |v| %>
          <%= render 'permission_fields', f: v %>
        <% end %>

        <div class="control-group">
          <div class="controls">
            <%= link_to_add_association f, :permissions do %>
              <div class="btn btn-success">
                <i class="fa fa-fw fa-plus"></i> Adicionar Permiss√£o
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card card-outline card-danger">
    <div class="card-footer">
      <%= link_to t('.back', default: t("helpers.links.back")), profiles_url, class: 'btn btn-default'  %>
      <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
