<%= simple_form_for([@unit, @contract]) do |f| %>
  <div class="card card-outline card-danger">
    <div class="card-header with-border">
      <h3 class="card-title">
        Dados da <%= Contract.model_name.human %>
      </h3>
    </div>
    <div class="card-body">
      <div class="row">
        <%= f.association :provider, html5: true, wrapper_html: { class: 'col-md-3' }, input_html: { class: 'select2' } %>
        <%= f.association :task, html5: true, wrapper_html: { class: 'col-md-3' }, input_html: { class: 'select2' } %>
        <%= f.input :value, wrapper_html: { class: 'col-md-3' }, input_html: { class: 'currency' } %>
        <%= f.input :moment, html5: true, wrapper_html: { class: 'col-md-3' } %>
      </div>
    </div>
  </div>

  <div class="card card-outline card-danger">
    <div class="card-footer">
      <%= link_to t('.cancel', default: t("helpers.links.cancel")), unit_contracts_path(@contract.unit), class: 'btn btn-default'  %>
      <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
