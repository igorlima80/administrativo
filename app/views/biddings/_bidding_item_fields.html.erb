<div class="row bidding_item nested-fields">
  <div class="col-md-3">
    <%= f.association kind.to_sym, label: I18n.t("activerecord.models.#{kind}"), input_html: { class: 'select2' } %>
  </div>
  <div class="col-md-1">
    <%= link_to_remove_association f, class: 'remove_bidding_item_fields' do %>
      <div class="btn btn-danger top-25">
        <i class="fa fa-fw fa-trash-alt"></i>
      </div>
    <% end %>
  </div>
</div>
